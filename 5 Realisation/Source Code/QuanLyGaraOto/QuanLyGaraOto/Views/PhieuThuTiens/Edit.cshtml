@model QuanLyGaraOto.Models.PhieuThuTien

@{
    ViewBag.Title = "Edit";
}

<style>


    body {
        background: url("/Content/Image/BG-Paying.jpg");
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        font-family: sans-serif
    }

    .panel {
        border: 1px solid #ffffff;
        background: rgba(0,0,0,0.5);
        padding: 10px 40px;
        margin-top: 10vh;
        box-shadow: 0px 3px 20px 6px rgba(0,0,0,0.75);
        width: 80%;
    }


    h3 {
        margin: 0;
        padding-left: 20px;
        padding-bottom: 20px;
        color: #fafc0d;
    }

    table {
        text-align: center;
    }

    .col-md-3 {
        color: white;
    }
</style>

<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IDPhieuThu)
            <div class="row">
                <div class="col-md-3 col-sm-2 col-xs-12"></div>

                <div class="col-md-9 col-sm-9 col-xs-12">
                    <div class="panel panel-default">
                        <Center>
                            <h3>Sửa Thông Phiếu Thu Tiền</h3>
                        </Center>
                        <div class="panel-body" style="padding-left:40px;">
                            <div class="form-group">
                                @Html.LabelFor(model => model.IDBienSo, "Biển Số", htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    <input type="hidden" value="@Model.IDBienSo" id="IDBienSo" />
                                    @Html.DropDownList("IDBienSo", (SelectList)ViewBag.IDBienSo, Model.Xe.TenChuXe, new { @class = "form-control", @id = "dropDown" })
                                    @Html.ValidationMessageFor(model => model.IDBienSo)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.NgayThu,"Ngày", htmlAttributes: new { @class = "control-label col-md-3", id = "NgayThuTien" })
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.NgayThu,new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.NgayThu)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.SoTienThu,"Số Tiền", htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    <input type="hidden" value="@Model.SoTienThu" name="SoTienThuCu"/>
                                    @Html.TextBoxFor(model => model.SoTienThu, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.SoTienThu)
                                </div>
                            </div>

                          
                            <div class="col-md-offset-3 col-md-10">
                                <a href="@Url.Action("Index", "PhieuThuTiens")" style="padding-right:20px;" class="btn btn-danger">
                                    Quay lại
                                </a>
                                <input type="submit" value="Xác nhận" class="btn btn-success" onclick="GanIDBienSo()" />

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</body>
<script>
    function GanIDBienSo() {
        var IDBienSo = $("#IDBienSo").val();
        $("#dropDown option:selected").val(IDBienSo);
    }
    $(function () {
        $("#NgayThuTien").datepicker({ dateFormat: 'mm/dd/yy' });
    });
</script>
