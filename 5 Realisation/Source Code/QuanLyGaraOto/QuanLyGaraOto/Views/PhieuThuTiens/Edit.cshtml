@model QuanLyGaraOto.Models.PhieuThuTien

@{
    ViewBag.Title = "Edit";
}

<style>


    body {
        margin: 0;
        padding-top: 10vh;
        padding-left: 20vh;
        background: url("/Content/Image/BG-Paying.jpg");
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        font-family: sans-serif
    }

    .panel {
        border: 1px solid #ffffff;
        background: rgba(0,0,0,0.5);
        padding: 10px 40px;
        margin-top: 10vh;
        box-shadow: 0px 3px 20px 6px rgba(0,0,0,0.75);
        width: 80%;
    }


    h3 {
        margin: 0;
        padding-left: 20px;
        padding-bottom: 20px;
        color: #fafc0d;
    }

    footer {
        position: unset;
    }

    table {
        text-align: center;
    }

    .col-md-3 {
        color: white;
    }
</style>

<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IDPhieuThu)
            <div class="row">
                <div class="col-md-3 col-sm-2 col-xs-12"></div>

                <div class="col-md-6 col-sm-9 col-xs-12">
                    <div class="panel panel-default">
                        <Center>
                            <h3>Sửa Thông Phiếu Thu Tiền</h3>
                        </Center>
                        <div class="panel-body" style="padding-left:40px;">
                            <div class="form-group">
                                @Html.LabelFor(model => model.IDBienSo, "Biển Số", htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.DropDownList("IDBienSo", String.Empty)
                                    @Html.ValidationMessageFor(model => model.IDBienSo)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.NgayThu,"Ngày", htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.NgayThu)
                                    @Html.ValidationMessageFor(model => model.NgayThu)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.SoTienThu,"Số Tiền", htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.SoTienThu)
                                    @Html.ValidationMessageFor(model => model.SoTienThu)
                                </div>
                            </div>

                          
                                <div class="col-md-offset-3 col-md-10">
                                    <a href="@Url.Action("Index", "PhieuThuTiens")" style="padding-right:20px;">
                                        <button class="btn btn-danger">Quay lại</button>
                                    </a>
                                    <a href="@Url.Action("Index", "PhieuThuTiens")" style="padding-right:20px;">
                                        <button type="submit" class="btn btn-success">Xác Nhận</button>
                                    </a>

                                
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</body>

