@model PagedList.IPagedList<QuanLyGaraOto.Models.PhieuThuTien>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
}

<h1 style="font-family:'Myriad Pro'; text-align:center">DANH SÁCH PHIẾU THU TIỀN</h1>
<br /><br /><br />
@using (Html.BeginForm("Index", "PhieuThuTiens", FormMethod.Get))
{
    <div class="form-inline my-2 my-lg-0">
        <label>Find by Name: </label>
        @Html.TextBox("searchString", ViewBag.CurrentFilter as string, htmlAttributes: new { @class = "form-control mr-sm-2", @placeholder = "Search", id = "txtSearch" })
        <input class="btn btn-secondary my-2 my-sm-0" type="submit" value="Search" />
        <a href="@Url.Action("Create","PhieuThuTiens")" class="btn btn-primary">Create New</a>
    </div>
}
<br />

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách phiếu tiếp nhận
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.First().Xe.TenChuXe)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().NgayThu)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().SoTienThu)
                            </th>
                            <th></th>
                        </tr>
                        @if (Model.Count() == 0)
                        {
                            <tr>
                                <td colspan="3"> Records not found </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Xe.TenChuXe)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NgayThu)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SoTienThu)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.IDPhieuThu }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.IDPhieuThu }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.IDPhieuThu })
                                    </td>
                                </tr>
                            }
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.PagedListPager(Model, page => Url.Action("Index", new { currentFilter = ViewBag.CurrentFilter, page }))
<script>
    $('#txtSearch').on('keypress', function (event) {
        var regex = new RegExp("^[a-zA-Z0-9]+$");
        var key = String.fromCharCode(!event.charCode ? event.which : event.charCode);
        if (!regex.test(key)) {
            event.preventDefault();
            return false;
        }
    });
</script>