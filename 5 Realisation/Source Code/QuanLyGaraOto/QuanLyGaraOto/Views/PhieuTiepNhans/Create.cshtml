@model QuanLyGaraOto.ViewModel.PhieuTiepNhan_Xe

@{
    ViewBag.Title = "Create";
}

<style>


    body {
        margin: 0;
        padding-top: 5vh;
        padding-left: 10vh;
        background: url("/Content/Image/BG-Recieve.jpg");
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        font-family: sans-serif;
    }

    .panel {
        border: 1px solid #ffffff;
        background: rgba(0,0,0,0.5);
        padding: 10px 40px;
        margin-top: 10vh;
        box-shadow: 0px 3px 20px 6px rgba(0,0,0,0.75);
        width: 80%;
    }


    h3 {
        margin: 0;
        padding-left: 20px;
        padding-bottom: 20px;
        padding-top: 20px;
        color: #fafc0d;
    }



    table {
        text-align: center;
    }

    .col-md-3 {
        color: white;
    }

    ::placeholder {
        font-style: italic;
        opacity: 0.9;
    }

    footer {
        position: unset;
    }
</style>


<body>
   @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-3 col-sm-2 col-xs-12"></div>

                <div class="col-md-6 col-sm-9 col-xs-12">
                    <div class="panel panel-default">
                        <Center>
                            <h3>Thêm Phiếu Tiếp Nhận</h3>
                        </Center>
                        <div class="panel-body">
                            <div class="form-group">
                                <div class="form-horizontal" style="padding-left:30px; ">

                                    @Html.ValidationSummary(true)
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.TenChuXe, "Chủ Xe", htmlAttributes: new { @class = "control-label col-md-3" })
                                        <div class="col-md-9">
                                            @Html.TextBoxFor(model => model.TenChuXe, new { placeholder = "Tên chủ xe" })
                                            @Html.ValidationMessageFor(model => model.TenChuXe)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.IDHieuXe, "Hiệu Xe", htmlAttributes: new { @class = "control-label col-md-3" })
                                        <div class="col-md-9">
                                            @Html.DropDownList("IDHieuXe", (SelectList)ViewBag.IDHieuXe)
                                            @Html.ValidationMessageFor(model => model.IDHieuXe)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.DiaChi, "Địa CHỉ", htmlAttributes: new { @class = "control-label col-md-3" })
                                        <div class="col-md-9">
                                            @Html.TextBoxFor(model => model.DiaChi, new { placeholder = "Địa chỉ chủ xe" })
                                            @Html.ValidationMessageFor(model => model.DiaChi)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.DienThoai, "SĐT", htmlAttributes: new { @class = "control-label col-md-3" })
                                        <div class="col-md-9">
                                            @Html.TextBoxFor(model => model.DienThoai, new { placeholder = "Số Điện Thoại" })
                                            @Html.ValidationMessageFor(model => model.DienThoai)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.NgayTiepNhan, "Ngày", htmlAttributes: new { @class = "control-label col-md-3" })
                                        <div class="col-md-9">
                                            @Html.TextBoxFor(model => model.NgayTiepNhan)
                                            @Html.ValidationMessageFor(model => model.NgayTiepNhan)
                                        </div>
                                    </div>

                                    <div class="form-inline col-md-offset-2 " style="padding-left:25px;">

                                        <a href="@Url.Action("Index", "PhieuTiepNhans")" style="padding-right:20px;">
                                            <button type="button" class="btn btn-danger">Quay lại </button>
                                        </a>

                                        <a href="@Url.Action("Index", "PhieuTiepNhans")" style="padding-right:20px;">
                                            <button type="submit" class="btn btn-success">Xác Nhận </button>
                                        </a>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</body>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
@section scripts
{
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
}
<script type="text/javascript">
    $(function () {
        $("#NgayTiepNhan").datepicker({ dateFormat: 'dd/mm/yy' });
    });
</script>
