@model QuanLyGaraOto.ViewModel.PhieuTiepNhan_Xe

@{
    ViewBag.Title = "Create";
}

<h2>Lập phiếu tiếp nhận</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(model => model.TenChuXe, "Tên Chủ Xe", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.TenChuXe, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TenChuXe)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.IDHieuXe, "IDHieuXe", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("IDHieuXe", (SelectList)ViewBag.IDHieuXe, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IDHieuXe)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.DiaChi, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DiaChi)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DienThoai, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.DienThoai, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DienThoai)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.NgayTiepNhan, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.NgayTiepNhan, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.NgayTiepNhan)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
@section scripts
{
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
}
<script type="text/javascript">
    $(function () {
        $("#NgayTiepNhan").datepicker({ dateFormat: 'dd/mm/yy' });
    });
</script>
