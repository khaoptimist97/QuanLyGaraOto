@model IEnumerable<QuanLyGaraOto.Models.PhuTung>

@{
    ViewBag.Title = "PhuTung";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>


    body {
        color: white;
        background: url("/Content/Image/BG-Parts.jpg");
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        font-family: sans-serif
    }

    .panel {
        border: 1px solid #ffffff;
        background: rgba(0,0,0,0.5);
        padding: 10px 40px;
        margin-top: 5vh;
        box-shadow: 0px 3px 20px 6px rgba(0,0,0,0.75);
        width: 99%;
    }


    h3 {
        margin: 0;
        padding-left: 20px;
        padding-bottom: 20px;
        color: #fafc0d;
    }

    table {
        text-align: center;
    }

    placeholder {
        font-style: italic;
    }

    footer {
        position: unset;
    }
</style>
<body>
    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-1 col-sm-2 col-xs-12"> </div>

            <div class="col-md-11 col-sm-9 col-xs-12">
                <div class="panel panel-default">
                   
                        <h1 style="font-family:'Myriad Pro'; text-align:center;color: #fafc0d;">DANH SÁCH PHỤ TÙNG</h1>
                        <br /><br /><br />
                        @using (Html.BeginForm("Index", "PhieuThuTiens", FormMethod.Get))
                        {
                            <div class="form-inline my-2 my-lg-0">
                                <label>Tìm theo tên: </label>
                                @Html.TextBox("searchString", ViewBag.CurrentFilter as string, htmlAttributes: new { @class = "form-control mr-sm-2", @placeholder = "Nhập tên phụ tùng" })
                                <input class="btn btn-primary my-2 my-sm-0" type="submit" value="Tìm Kiếm" />
                                <a href="@Url.Action("Create","PhuTungs")" style="padding-left:10px;">
                                    <button type="button" class="btn btn-success col-md-offset-4" style="padding-left:10px;">Thêm Phụ Tùng</button>
                                </a>
                                @*<a href="#" class="btn btn-danger" style="" id="suaButton">Sửa chữa</a>*@
                            </div>
                        }
                        <br />

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="panel panel-default">
                                    <div class="panel-body">
                                        <div>
                                            <table class="table table-bordered">
                                                <tr>
                                                    <th>
                                                        <Center>Tên Phụ Tùng</Center>
                                                    </th>
                                                    <th>
                                                        <Center>Số Lượng Tồn</Center>
                                                    </th>
                                                    <th>
                                                        <Center>Đơn giá hiện hành</Center>
                                                    </th>

                                                    <th></th>
                                                </tr>

                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.TenPhuTung)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.SoLuongTon)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.DonGiaHienHanh)
                                                        </td>

                                                        <td>

                                                            <a href="@Url.Action("Details","PhuTungs",new { id = item.IDPhuTung })">
                                                                <button type="button" class="btn btn-info glyphicon glyphicon-info-sign"></button>
                                                            </a>
                                                            <a href="@Url.Action("Edit", "PhuTungs", new { id = item.IDPhuTung })">
                                                                <button type="button" class="btn btn-warning ">Sửa</button>
                                                            </a>

                                                        </td>
                                                    </tr>
                                                }

                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
   

</body>
<script>
    $('#txtSearch').on('keypress', function (event) {
        var regex = new RegExp("^[a-zA-Z0-9]+$");
        var key = String.fromCharCode(!event.charCode ? event.which : event.charCode);
        if (!regex.test(key)) {
            event.preventDefault();
            return false;
        }
    });
</script>