@model IEnumerable<QuanLyGaraOto.Models.UserDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>

    h2 {
        text-align: center;
    }

    .panel {
        border: 1px solid #ffffff;
        background: rgba(0,0,0,0);
        padding: 10px 40px;
        margin-top: 5vh;
        box-shadow: 0px 3px 20px 6px rgba(0,0,0,0.75);
        width: 99%;
    }

    .panel-body {
        border: 1px solid #ffffff;
        background: rgba(0,0,0,0);
        padding: 10px 40px;
        margin-top: 5vh;
        box-shadow: 0px 3px 20px 6px rgba(0,0,0,0.75);
        width: 99%;
    }

    th, td {
        text-align: center;
    }
</style>
<h2>Quản lý Tài Khoản</h2>
<br />
<div class="container-fluid">
    <!-- Example DataTables Card-->
    <div class="mb-3">

        <div class="panel panel-default" style="padding-bottom:40px;">


            @using (Html.BeginForm("Create", "UserDetails", FormMethod.Get))
            {
                <div style="margin-left:2em; margin-bottom:1em; font-weight:bold">
                    <button type="submit" class="btn btn-primary" name="themmoi">THÊM MỚI</button>
                </div>
            }
        
        <div class="panel-body">
        <div class="table">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr style="text-align:center">
                        <th style="width:20%">Loại Tài Khoản</th>
                        <th style="width:20%">Tên Tài Khoản</th>
                        <th style="width:20%">Mật Khẩu</th>
                        <th style="width:40%">Chức năng</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr style="text-align:center">
                        <th style="width:20%">Loại Tài Khoản</th>
                        <th style="width:20%">Tên Tài Khoản</th>
                        <th style="width:20%">Mật Khẩu</th>
                        <th style="width:40%">Chức năng</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.UserType.TypeName</td>
                            <td>@item.UserName</td>
                            <td>@item.Password</td>
                            <td style="text-align:center">
                                @using (Html.BeginForm())
                                {
                                    <button class="btn glyphicon glyphicon-info" > @Html.ActionLink("Xem chi tiết", "Details", new { id = item.UserName })</button>
                                    <button class="btn">@Html.ActionLink("Sửa", "Edit", new { id = item.UserName })</button>
                                    <button class="btn" >@Html.ActionLink("Xóa", "Delete", new { id = item.UserName })</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>
    </div>
