@model QuanLyGaraOto.Models.PhuTung

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .panel {
        border: 1px solid #ffffff;
        background: rgba(0,0,0,0.0);
        padding: 30px 20px;
        margin-top: 5vh;
        box-shadow: 0px 3px 20px 6px rgba(0,0,0,0.75);
    }

    h2 {
        text-align: center;
    }

    ::placeholder {
        font-style: italic;
    }
</style>
<h2>Thêm Phụ tùng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-sm-4 col-xs-12"></div>

                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="panel panel-default">

                        <div class="panel-body" style="padding-left:40px;">

                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                @Html.LabelFor(model => model.TenPhuTung,"Tên phụ Tùng:", htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.TenPhuTung, new { placeholder = "Tên Phụ Tùng", @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.TenPhuTung)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.SoLuong,"Số lượng:", htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.SoLuong, new { placeholder = "Số Lượng", @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.SoLuong)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.DonGiaHienHanh,"Đơn Giá:", htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.DonGiaHienHanh, new { placeholder = "Đơn Giá hiện hành", @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.DonGiaHienHanh)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Deleted,"Đã Xóa", htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Deleted)
                                    @Html.ValidationMessageFor(model => model.Deleted)
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <button type="button" onclick="window.location.href='@Url.Action("Index","PhuTungs")'" class="btn btn-default">Quay lại</button>
                                    <input type="submit" value="Xác Nhận" class="btn btn-default" />

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
}